<!--This will show up for each product in the checkout when purchasing-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRoot"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/image_view_frame"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/checkout_product_image"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/image_view_frame"
            android:contentDescription="@string/Image_Description"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/checkout_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="11sp"
                android:paddingTop="4dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/checkout_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textStyle="bold"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/image_view_frame"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="x"/>

        <TextView
            android:id="@+id/checkout_quantity_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="1"/>




    </LinearLayout>




</LinearLayout>